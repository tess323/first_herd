

<div id="carousel-example" class="carousel slide" data-ride="carousel">
    <div class="row">
        <div class="col-xs-offset-3 col-xs-6">
            <div class="carousel-inner">
                <div class="item active">
                    <div class="carousel-content">
                        <div>
                            <h2>Pitchfork's Newest</h2>
                            <p>Every week pitchfork gives you their favorite new songs.</p>
                        </div>
                    </div>
                </div>

				<% for(key in data){ %>
	                <div class="item">
	                    <div class="carousel-content">
	                        <div>
	                            <strong><h2><%= key %> : <%= data[key] %></h2>
	                            <form method="POST" action="/scraping">
									<input type="hidden" value="<%= key %>" name="artist">
							  		<input type="hidden" value="<%= data[key] %>" name="song"></strong>
							  		<a href="#" class="btn btn-lg btn-danger"><span class="glyphicon glyphicon-heart"></span> Listen</a>
							  	</form>
							</div>
	                    </div>
	                </div>
				<% }; %>
				
        	</div>
        </div>
    </div>
     <a class="left carousel-control" href="#carousel-example" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
 <a class="right carousel-control" href="#carousel-example" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>



  <script>  setCarouselHeight('#carousel-example');

    function setCarouselHeight(id)
    {
        var slideHeight = [];
        $(id+' .item').each(function()
        {
            // add all slide heights to an array
            slideHeight.push($(this).height());
        });

        // find the tallest item
        max = Math.max.apply(null, slideHeight);

        // set the slide's height
        $(id+' .carousel-content').each(function()
        {
            $(this).css('height',max+'px');
        });
    }</script>

